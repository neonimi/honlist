<p id="notice"><%= notice %></p>

<table class="container-sm table">
  <thead>
    <tr>
      <%
=begin%>
 <th>Isbnコード</th>  
<%
=end%>
      <th>図書名</th>
      <th>価格</th>
      <th>出版社</th>
      <th>刊行日</th>
      <th>Dl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <%
=begin%>
 <td><%= book.isbn %></td>  
<%
=end%>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.publish %></td>
        <td><%= book.published %></td>
        <td><%= book.dl %></td>
        <td><%= link_to '確認', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '本を追加する', new_book_path, class: "ml-lg-5" %>
